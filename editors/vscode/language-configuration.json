{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(schema|source|stream|pipeline|fn|test)\\s+",
      "end": "^\\s*\\}"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(schema|source|stream|pipeline|fn|test|match|window|emit).*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*\\}"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
