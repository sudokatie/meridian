-- Test file for basic math assertions

test "addition works" {
    assert 1 + 1 == 2
    assert 10 + 20 == 30
    assert 100 + 0 == 100
}

test "subtraction works" {
    assert 5 - 3 == 2
    assert 100 - 50 == 50
    assert 10 - 10 == 0
}

test "multiplication works" {
    assert 2 * 3 == 6
    assert 10 * 0 == 0
    assert 7 * 1 == 7
}

test "division works" {
    assert 10 / 2 == 5
    assert 100 / 10 == 10
    assert 9 / 3 == 3
}

test "comparison operators" {
    assert 1 < 2
    assert 2 <= 2
    assert 3 > 2
    assert 3 >= 3
    assert 5 == 5
    assert 5 != 6
}

test "boolean logic" {
    assert true
    assert not false
    assert true and true
    assert true or false
    assert not (true and false)
}

test "complex expressions" {
    assert (2 + 3) * 4 == 20
    assert 10 - 3 * 2 == 4
    assert (100 / 10) + 5 == 15
}
